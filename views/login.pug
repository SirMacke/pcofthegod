doctype html
head
  meta(charset='utf-8')
  link(href='https://fonts.googleapis.com/css?family=Questrial|Russo+One&display=swap' rel='stylesheet')
  script(src='https://kit.fontawesome.com/c7caeb49e9.js')
  link(rel='stylesheet' type='text/css' href='/./styles/login.min.css')
  title Pcofthegod - Login
body
  img(src='/./images/red gaming setup5.jpg' alt='Red gaming setup')
  form(method='post')
    h1 Login
    div
      .icon-div
        i.fas.fa-envelope
      input(type='email' placeholder='Email' name='email')
    div
      .icon-div
        i.fas.fa-lock
      input(type='password' placeholder='Password' name='password')
    div
      button#login(type='submit') Login
script(type='text/javascript' src='/./scripts/login.js')
